    <h1>Liste des classes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for classroom in classrooms %}
                <tr>
                    <td>{{ classroom.name }}</td>
                    <td>
                        <a href="{{ path('classroom_edit', {'id': classroom.id ,'name':classroom.Name}) }}">Modifier</a>
                    </td>
                    <td>                        <a href="{{ path('classroom_delete', {'id': classroom.id}) }}">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

<h1>Nouvelle classe</h1>
{% for message in app.flashes('notification') %}
<div style="width:40%;" class="alert alert-info alert-dismissible fade show">
    {{ message }}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
</div>
{% endfor %}
{{ form_start(form) }}
    {{ form_widget(form) }}
    <input type="submit" value="Ajouter" class="btn btn-primary">
{{ form_end(form) }}

