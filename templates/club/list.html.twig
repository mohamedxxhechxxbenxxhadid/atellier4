<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <h1>Liste des clubs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Ref</th>
                <th>Date</th>
                <th>Students</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
            {% for club in clubs %}
                <tr>
                    <td>{{ club.id }}</td>
                    <td>{{ club.Ref }}</td>
                    <td>{{ club.getCreatedAt|date('Y-m-d H:i:s')  }}</td>
                    <td> {% for student in club.students%}
                        {{student.Email}}<br/>
                    {%endfor%}
                    <td>
                        <a href="{{ path('club_edit', {'id': club.id ,'name':club.Ref}) }}">Modifier</a>
                    </td>
                    <td>                        <a href="{{ path('club_delete', {'id': club.id}) }}">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

<h1>New Club</h1>
{% for message in app.flashes('notification') %}
<div style="width:40%;" class="alert alert-info alert-dismissible fade show">
    {{ message }}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
</div>
{% endfor %}
{{ form_start(form) }}
    {{ form_widget(form) }}
    <input type="submit" value="Ajouter" class="btn btn-primary">
{{ form_end(form) }}

