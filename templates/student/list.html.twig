    <h1>Liste des etudiants</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>age</th>
                <th>CLass</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
            {% for student in students %}
                <tr>
                    <td>{{ student.id }}</td>
                    <td>{{ student.name }}</td>
                    <td>{{ student.Email }}</td>
                    <td>{{ student.age}}</td>
                    <td>{{ student.classrooms.name }}</td>
                    <td>
                        <a href="{{ path('student_edit', {'id': student.id ,'name':student.Name}) }}">Modifier</a>
                    </td>
                    <td>                        <a href="{{ path('student_delete', {'id': student.id}) }}">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

<h1>New Student</h1>
{% for message in app.flashes('notification') %}
<div style="width:40%;" class="alert alert-info alert-dismissible fade show">
    {{ message }}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
</div>
{% endfor %}
{{ form_start(form) }}
    {{ form_widget(form) }}
    <input type="submit" value="Ajouter" class="btn btn-primary">
{{ form_end(form) }}

